{
  "version": 2,
  "buildCommand": "cd frontend && npm install && npm run build",
  "outputDirectory": "frontend/.next",
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "https://$BACKEND_URL/api/:path*"
    }
  ],
  "env": {
    "NEXT_PUBLIC_API_URL": "https://$BACKEND_URL"
  },
  "github": {
    "silent": true
  }
}
